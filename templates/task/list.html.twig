{% extends 'base.html.twig' %}

{% block title %}Task List{% endblock %}

{% block body %}
    <table class="w-full table">
        <caption class="caption-top font-sans leading-tight text-gray-800">
            <a class="btn btn-sm" href="{{ path('task_new') }}">Create task</a>
        </caption>
        <thead>
            <tr class="border-b">
                <th>Name</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody id="tasks" {{ turbo_stream_listen('App\\Entity\\Task') }}>
        {% for task in tasks %}
            {% include 'task/table.row.html.twig' %}
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
