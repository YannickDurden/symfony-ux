{% props title, description, image = null %}

<div {{attributes}} class="card card-compact bg-base-100 w-96 shadow-xl">
	{% if image is not null %}
	<figure>
		<img src="{{ image }}" alt="image-card"/>
	</figure>
	{% endif %}
	<div class="card-body">
		<h2 class="card-title">{{ title }} </h2>
		<p>{{ description }}</p>
		<div class="card-actions justify-end">
			{% block action %}{% endblock %}
		</div>
	</div>
</div>
